<% content_for :head_script do %>
  <%= javascript_include_tag "participations" %>
<% end %>

<section>
    <h2>Reporte de Respuestas</h2>
    <%= will_paginate @participations, :previous_label => ApplicationHelper::PREV_LBL, :next_label => ApplicationHelper::NEXT_LBL %>
    <table class="table table-striped table-bordered responsive">
      <tr>
        <th><%= sortable "pregunta", "Pregunta" %></th>
        <th><%= sortable "respuesta", "Respuesta" %></th>
        <th><%= sortable "codigo", "CÃ³digo" %></th>
        <th><%= sortable "email", "Autor" %></th>
        <th><%= sortable "fecha", "Fecha" %></th>
      </tr>

    <% @participations.each do |participation| %>
      <tr>
        <td><%= participation.pregunta %></td>
        <td><%= participation.respuesta %></td>
        <td><%= participation.codigo %></td>
        <td><%= participation.email %></td>
        <td class="centered"><%= participation.created_at.in_time_zone("Mexico City").strftime("%h %d %Y") %></td>
      </tr>
    <% end %>
    </table>
</section>


